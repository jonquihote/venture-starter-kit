{
    "$schema": "https://getcomposer.org/schema.json",
    "name": "jonquihote/venture",
    "type": "project",
    "description": "The over bloated starter kit for new Laravel application.",
    "keywords": [
        "laravel",
        "framework"
    ],
    "license": "MIT",
    "require": {
        "php": "^8.4",
        "laravel/framework": "^12.0",
        "laravel/tinker": "^2.10.1",
        "nwidart/laravel-modules": "^12.0"
    },
    "require-dev": {
        "dcblogdev/laravel-module-generator": "^2.0",
        "fakerphp/faker": "^1.23",
        "laravel/pail": "^1.2.2",
        "laravel/pint": "1.24.0",
        "laravel/sail": "^1.41",
        "mockery/mockery": "^1.6",
        "nunomaduro/collision": "^8.6",
        "pestphp/pest": "^4.0",
        "pestphp/pest-plugin-laravel": "^4.0",
        "pestphp/pest-plugin-livewire": "^4.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "cs": [
            "rector",
            "pint",
            "bun run format"
        ],
        "pint": "pint --config pint-strict-imports.json",
        "rector": "rector",
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi",
            "@php artisan filament:upgrade"
        ],
        "post-update-cmd": [
            "@php artisan boost:update --ansi",
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi",
            "@php -r \"file_exists('database/database.sqlite') || touch('database/database.sqlite');\"",
            "@php artisan migrate --graceful --ansi"
        ],
        "dev": [
            "Composer\\Config::disableProcessTimeout",
            "bin/dev"
        ],
        "dev:ssr": [
            "Composer\\Config::disableProcessTimeout",
            "bin/dev --ssr"
        ],
        "test": [
            "@php artisan config:clear --ansi",
            "@php artisan test --parallel --testsuite Base"
        ],
        "test:api": [
            "@php artisan config:clear --ansi",
            "@php artisan test --parallel --testsuite API"
        ]
    },
    "extra": {
        "laravel": {
            "dont-discover": [
                "laravel/horizon",
                "laravel/pulse",
                "laravel/reverb",
                "laravel/scout",
                "laravel/telescope",
                "spatie/laravel-activitylog",
                "spatie/laravel-markdown",
                "spatie/laravel-medialibrary",
                "spatie/laravel-permission",
                "spatie/laravel-settings",
                "spatie/laravel-tags"
            ]
        },
        "merge-plugin": {
            "include": [
                "modules/*/composer.json"
            ]
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true,
            "wikimedia/composer-merge-plugin": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
